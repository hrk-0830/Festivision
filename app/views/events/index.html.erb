<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= link_to 'イベント追加', new_event_path, class: 'btn btn-primary mb-3' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= month_calendar events: @events do |date, events| %>
        <div>
          <div>
            <%= date.day %>
            <% events.each do |event| %>
              <%= link_to event.name, event_path(event.id), class: 'card-link' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
