<div class="container my-5">
  <div class="row my-5">
    <div class="col-md-2">
      <%= link_to 'イベント追加', new_event_path, class: 'btn btn-primary mb-3' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= month_calendar events: @events, partial: 'simple_calendar/month_calendar' do |date, events| %>
        <%= date.day %>
          <% events.each do |event| %>
            <div>
              <%= link_to event.name, event_path(event.id) %>
            </div>
          <% end %>
        <div class="mt-auto"></div>
      <% end %>
    </div>
  </div>
</div>
