<div class="container-fluid">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center">お祭り編集</h1>

          <%= form_with model: @event, url: event_path, local: true do |form| %>


            <div class="form-group">
              <%= form.label :image, "画像" %>
              <%= form.file_field :image, accept: "image/*", class: "form-control-file" %>
            </div>

            <div class="form-group">
              <%= form.label :name, "名前" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :prefecture_status, "開催地" %>
              <%= form.select :prefecture_status, options_for_select(Event.prefecture_statuses_i18n.invert, selected: @event.prefecture_status), {}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :start_time, "日時" %>
              <%= form.datetime_select :start_time, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :overview, "特徴" %>
              <%= form.text_area :overview, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.submit "編集する", class: "btn btn-primary btn-block" %>
              <%= link_to '削除する', event_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger btn-block destroy_post_#{@event.id}"%>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
