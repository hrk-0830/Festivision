<div class="container my-5">
  <h5>
    <%= link_to user_path(@event.user.id) do %>
      <%= @event.user.name %>
    <% end %>
    のレビュー
  </h5>
  <div class="row">
    <div class="col-md-5">
      <h3 class="my-5"><strong><%= @event.name %></strong></h3>
    </div>
    <div class="col-md-3 my-5"></div>
    <div class="col-md-2 my-5">
      <h4><%= @event.prefecture_status_i18n %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10">
        <%= image_tag @event.image, width: "100%" %>
    </div>
    <div class="col-md-2"></div>
  </div>

  <div class="row my-5">
    <div class="col-md-8">
      <h4><strong>特徴</strong></h4>
    </div>
  </div>

  <div class="row my-5">
    <div class="col-md-8">
      <%= @event.overview %>
    </div>
    <div class="col-md-4"></div>
  </div>

  <div class="row my-5">
    <div class="col-md-3">
      <!--%= render "favorites/btn", post: @event %>-->
    </div>
    <div class="col-md-9"></div>
  </div>

  <div class="row my-5">
    <div class="col-md-6">
      <div id ="comments_area">
        <%= render "comments/form", event: @event, comment: @comment %>
      </div>
    </div>
    <div class="col-md-4 my-3"></div>
    <% if @event.user == current_user %>
      <div class="col-md-2 my-5">
        <%= link_to "編集する", edit_event_path(@event), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class ="row my-5">
    <div class ="col-md-6">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>User</th>
            <th>Comment</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @event.comments.each do |comment| %>
          <tr>
            <td>
              <%= link_to user_path(comment.user) do %>
                <%= comment.user.name %>
              <% end %>
            </td>
            <td><%= comment.comment %></td>
            <td>
              <% if comment.user == current_user %>
                <%= link_to "削除", event_comment_path(@event, comment), method: :delete, data: { confirm: '本当に消しますか？' }, remote: true, class: "btn btn-danger pull-right" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class ="col-md-6"></div>
  </div>
</div>
