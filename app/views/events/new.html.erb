<div class="container-fluid">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center">お祭り追加</h1>

          <%= form_with(model: @event, local: true, html: {class: "needs-validation", novalidate: true}) do |form| %>

            <div class="form-group">
              <%= form.label :image %>
              <%= form.file_field :image, accept: "image/*", class: "form-control-file" %>
            </div>

            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :prefecture_status, "開催地" %>
              <%= form.select :prefecture_status, options_for_select(Event.prefecture_statuses_i18n.invert, selected: @event.prefecture_status), {}, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :start_time %>
              <%= form.datetime_select :start_time, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :overview %>
              <%= form.text_field :overview, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.submit "保存", class: "btn btn-primary btn-block" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
