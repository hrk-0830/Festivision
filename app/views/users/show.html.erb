<div class="container my-5">
  <h1 class="text-center">マイページ</h1>

  <div class="row my-5">
    <div class="col-md-2"></div>
    <div class="col-md-8 my-5">
      <div class="card" style="height: 400px;">
        <div class="card-body d-flex flex-column align-items-center">
          <h2 class="card-title text-center"><%= @user.name %></h2>
          <p class="card-text"><%= @user.introduction %></p>
          <div class="mt-auto">
            <%= link_to "編集", edit_user_path(@user), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>

  <h3 class="text-center"><%= @user.name %>の投稿一覧</h3>
  <div class="row my-5">
    <% @events.each do |event| %>
      <div class="col-md-2">
        <div class="card">
          <%= link_to event_path(event) do %>
            <%= image_tag event.image, class: "card-img-top img-fluid" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= event.name %></h5>
            <p class="card-text">
              <%= event.prefecture_status_i18n %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>


</div>
