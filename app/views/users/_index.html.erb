<table class='table'>
  <thead>
    <tr>
      <th>名前</th>
      <th>フォロー</th>
      <th>フォロワー</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td>
          <% if user != current_user %>
            <% if user.is_followed_by?(current_user) %>
              <%= link_to user_relationships_path(user.id), method: :delete, class: 'btn btn-danger' do %>
                フォロー解除
              <% end %>
            <% else %>
              <%= link_to user_relationships_path(user.id), method: :post, class: 'btn btn-primary' do %>
                フォロー
              <% end %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user_path(user.id), class: "user_#{user.id} btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>